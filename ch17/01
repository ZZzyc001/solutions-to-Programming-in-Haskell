--                      Just m  -> exec c (VAL (n + m) : s)
--                      Nothing -> fail s
--      Nothing -> fail s
-- =    { define: exec (ADD c) (VAL m : VAL n : s) = exec c (VAL (n + m) : s) }
--   case eval x of
--      Just n  -> case eval y of
--                      Just m  -> exec (ADD c) (VAL m : VAL n : s)
